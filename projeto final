    Contato *c4 = new Contato("n","b","c");
    Contato *c5 = new Contato("VOCE SAIU","b","c");
    Agenda *a = new Agenda();
    a->addCont(c5);
    a->addCont(c4);
    a->addCont(c3);
    a->addCont(c2);
    a->addCont(c1);
    /*a->motraLista(a->getContatos());
    a->removeCont(c5);
    std::cout << "***********************************************************\n***************************************\n" << std::endl;
